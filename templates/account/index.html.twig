{% extends '/admin/user/view.html.twig' %}

{% block title %}Hello AccountController!{% endblock %}

{% block body %}
    <h1>{{ user.firstName }} 's  Profile</h1>

    <div class="row">
        <label for="staticEmail" class="col-sm-2">Identifier :</label>
        <label for="staticEmail" class="col-sm-10">{{ user.id }}</label>
    </div>
    <div class="row">
        <label for="staticEmail" class="col-sm-2">Firstname :</label>
        <label for="staticEmail" class="col-sm-10">{{ user.firstName }}</label>
    </div>
    <div class="row">
        <label for="staticEmail" class="col-sm-2">Email :</label>
        <label for="staticEmail" class="col-sm-10">{{ user.email }}</label>
    </div>
    <div class="row">
        <label for="staticEmail" class="col-sm-2">Roles :</label>
        <label for="staticEmail" class="col-sm-10">{{ user.rolesToString }}</label>
    </div>
    <hr>
    <a type="button" class="text-primary btn btn-outline-primary" href="{{ path('app_reset_password_user') }}" >Changer de mot de passe</a>
{% endblock %}
